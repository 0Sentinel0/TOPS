{
  "name": "tops",
  "version": "1.0.0",
  "description": "Team Onboarding Process Support app built with MERN stack",
  "main": "server.js",
  "type": "module",
  "scripts": {
    "server": "nodemon server.js",
    "client": "npm start --prefix client",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "heroku-postbuild": "NPM_CONFIG_PRODUCTION=false npm install --prefix client && npm run build --prefix client"
  },
  "repository": {
    "client-install": "npm install --prefix client",
    "type": "git",
    "url": "git+https://github.com/0Sentinel0/TOPS.git"
  },
  "author": "Hengyu Shi",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/0Sentinel0/TOPS/issues"
  },
  "homepage": "https://github.com/0Sentinel0/TOPS#readme",
  "dependencies": {
    "body-parser": "^1.19.0",
    "concurrently": "^6.2.1",
    "express": "^4.17.1",
    "mongoose": "^6.0.5"
  },
  "devDependencies": {
    "nodemon": "^2.0.12"
  }
}
